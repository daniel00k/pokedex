<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.PokemonDetailsFragment">

    <ProgressBar
        android:id="@+id/loadingPokemon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/pokemonInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/pokemonDescriptionAvatar"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:src="@drawable/ic_search"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/pokemonName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@+id/pokemonDescriptionAvatar"
                app:layout_constraintStart_toStartOf="@+id/pokemonDescriptionAvatar"
                app:layout_constraintTop_toBottomOf="@+id/pokemonDescriptionAvatar"
                tools:text="Pikachu" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/pokemonTypeLbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/types"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pokemonName" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/pokemonType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/pokemonTypeLbl"
                app:layout_constraintTop_toBottomOf="@+id/pokemonName"
                tools:text="water, fire" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/pokemonAttackLbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/attacks"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pokemonType" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/pokemonAttack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/pokemonAttackLbl"
                app:layout_constraintTop_toBottomOf="@id/pokemonType"
                tools:text="tackle, mist" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/pokemonSkillLbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/abilities"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pokemonAttack" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/pokemonSkill"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/pokemonSkillLbl"
                app:layout_constraintTop_toBottomOf="@id/pokemonAttack"
                tools:text="rain-dish, run-away" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/pokemonLocationLbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/locations"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pokemonSkill" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/pokemonLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/pokemonLocationLbl"
                app:layout_constraintTop_toBottomOf="@id/pokemonSkill"
                tools:text="rain-dish, run-away" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>