<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/pokedexIndexFragment">

    <fragment
        android:id="@+id/pokedexIndexFragment"
        android:name="me.danielaguilar.pokedex.ui.PokedexIndexFragment"
        android:label=""
        tools:layout="@layout/fragment_pokedex_index">
        <action
            android:id="@+id/action_pokedexIndexFragment_to_pokemonDetailsFragment"
            app:destination="@id/pokemonDetailsFragment"
            app:enterAnim="@anim/nav_default_enter_anim">
            <argument
                android:name="pokemonId"
                app:argType="integer"
                app:nullable="false" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/pokemonDetailsFragment"
        android:name="me.danielaguilar.pokedex.ui.PokemonDetailsFragment"
        android:label=""
        tools:layout="@layout/fragment_pokemon_details" />
</navigation>